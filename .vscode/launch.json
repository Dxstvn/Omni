    "version": "0.2.0",
    "configurations": [

        
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "preLaunchTask": "watch-webpack",
            "args": [
                "runserver"
            ],
            "django": true,
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "run-scss",
            "type": "python",
            "request": "launch",
            "preLaunchTask": "watch-scss",
        },
        
    ]
}